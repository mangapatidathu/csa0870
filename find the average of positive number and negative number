def main():
    positive_sum = 0
    positive_count = 0
    negative_sum = 0
    negative_count = 0
    
    while True:
        num = int(input("Enter a number (-1 to stop): "))
        
        if num == -1:
            break
        
        if num >= 0:
            positive_sum += num
            positive_count += 1
        else:
            negative_sum += num
            negative_count += 1
    
    if positive_count > 0:
        positive_avg = positive_sum / positive_count
        print(f"Average of positive numbers: {positive_avg}")
    else:
        print("No positive numbers were entered.")
    
    if negative_count > 0:
        negative_avg = negative_sum / negative_count
        print(f"Average of negative numbers: {negative_avg}")
    else:
        print("No negative numbers were entered.")

if name == "main":
    main()
